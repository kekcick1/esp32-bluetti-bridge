# Налаштування WiFi та MQTT для Bluetti EB3A Bridge
# Скопіюйте цей файл в .env та змініть значення

# WiFi налаштування
WIFI_SSID=Your_WiFi_Name
WIFI_PASSWORD=Your_WiFi_Password

# MQTT налаштування (Home Assistant)
MQTT_SERVER=192.168.1.100
MQTT_PORT=1883
MQTT_USER=homeassistant
MQTT_PASSWORD=your_password

# Bluetti налаштування
BLUETTI_NAME=EB3A
BLUETTI_MAC=D1:4C:11:6B:6A:3D

# Підключення по MAC (true) або по імені (false)
USE_MAC_ADDRESS=true
